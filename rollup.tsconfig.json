{
  "compilerOptions": {
    "rootDir": "src/lib",
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/lib/**/*",
    "src/declarations.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/lib/**/__tests__/",
    "src/lib/**/*.test.tsx"
  ]
}